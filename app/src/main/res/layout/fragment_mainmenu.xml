<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.MainMenuFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Welcome_text"
        android:textSize="32dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/preliminary_btn"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preliminary_text"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/class_element_btn"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/class_element_text"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/list_storage_test"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_storage_text"
        android:layout_gravity="center"/>

</LinearLayout>
